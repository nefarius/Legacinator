<mah:MetroWindow x:Class="Legacinator.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 mc:Ignorable="d"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen"
                 Icon="floppy_disk_icon.ico"
                 ShowIconOnTitleBar="False"
                 Loaded="MainWindow_OnLoaded"
                 Title="Nefarius' Legacinator"
                 Height="440"
                 Width="700">
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="OpenGitHub" ToolTip="Open up the GitHub site">
                <iconPacks:PackIconForkAwesome Width="22"
                                               Height="22"
                                               Kind="Github" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <Grid>
        <mah:MetroTabControl Margin="16">
            <mah:MetroTabItem Header="Detection">
                <StackPanel>
                    <Label Content="Legacy device driver detection utility" />
                    <mah:MetroHeader Margin="8, 16, 0, 16"
                                     Header="If outdated components are detected, they will show up below as tiles you can click on to get it resolved!" />

                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <WrapPanel Margin="8" x:Name="ResultsPanel" />
                    </ScrollViewer>
                </StackPanel>
            </mah:MetroTabItem>

            <mah:MetroTabItem Header="About">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- License section -->
                    <TextBlock TextWrapping="Wrap"
                               TextAlignment="Justify"
                               Grid.Row="1">
                        Copyright (c) 2022-2023, Benjamin Höglinger-Stelzer<LineBreak />
                        All rights reserved.<LineBreak />
                        <LineBreak />
